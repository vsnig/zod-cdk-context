{
  "name": "zod-cdk-context",
  "version": "0.2.2",
  "description": "Validate AWS CDK context with Zod",
  "keywords": [
    "zod",
    "cdk",
    "aws-cdk",
    "validation",
    "context"
  ],
  "homepage": "https://github.com/vsnig/zod-cdk-context",
  "repository": {
    "type": "git",
    "url": "https://github.com/vsnig/zod-cdk-context.git"
  },
  "author": "Viacheslav Snizhko",
  "type": "module",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format:check": "npx prettier . --check --cache",
    "format:fix": "npx prettier . --write",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "validate": "run-p typecheck format:check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate && npm run test"
    }
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "aws-cdk-lib": "^2.162.1",
    "husky": "^4.3.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "constructs": "^10.0.0",
    "zod": "^3.25.0"
  }
}
